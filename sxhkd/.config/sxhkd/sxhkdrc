#####################
### BSPWM HOTKEYS ###
#####################

# quit/restart bspwm
alt + ctrl + {q,r}
	bspc {quit,wm -r}

# close/kill node
alt + {_,shift + }q
	bspc node -{c,k}

# alternate tiled/monocle layout
alt + m
	bspc desktop -l next

### STATE/FLAGS ###

# set node state
alt + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}
alt + shift + s
	bspc node -g sticky; bspc node -l above
# normalize
alt + shift + n
	bspc node -g !sticky; bspc node -l normal

### FOCUS/SWAP ###

# focus/move node in specific direction
alt + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

#??
# focus node for specific path jump
#??
# alt + {p,b,comma,period}
	# bspc node -f @{parent,brother,first,second}

# switch to/send to specific desktop
alt + {_,shift + }{2,3,4,7,8,9,0,minus}
	bspc {desktop -f,node -d} '^{1,2,3,4,5,6,7,8}'
    # make optional (if such a window exists)
    #; bspc node -f 'any.!sticky.leaf.local'

### PRESELECT ###

# preselect direction
alt + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# cancel preselection
alt + ctrl + BackSpace
	bspc node -p cancel

### MOVE/RESIZE ###

# expand window from each side outwards
# alt + ctrl + shift + {h,j,k,l}
#   bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract window from each side inwards
# alt + shift + {h,j,k,l}
#   bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
alt + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

shift + alt + {Left,Down,Up,Right}
	bspc node -v {-80 0,0 80,0 -80,80 0}

#############
### UTILS ###
#############

# make sxhkd reload its configuration files:
alt + ctrl + Escape
  pkill -USR1 -x sxhkd

# program launcher
alt + Return
  rofi -modi drun -show drun

# terminal emulator
alt + space
  alacritty

# terminal emulator
alt + p
  rofi-pass

# translate
super + s
  $HOME/bash-scripts/utils/translate.sh en-ru &

# translate all
super + alt + s
  $HOME/bash-scripts/utils/translate.sh en-ru all &

# translate vim
super + shift + s
  $HOME/bash-scripts/utils/translate.sh en-ru vim &

# get links in the browser
super + shift + d
  xdotool mousemove 1808 106 && xdotool click 1 &

# download from clipboard
super + d
  $HOME/bash-scripts/utils/download-xclip.sh &

###################
### APP ACTIONS ###
###################

# Screenshot
Print
  gnome-screenshot

# Set random wallpaper
super + i
  $HOME/bash-scripts/utils/set-random-wallpaper.sh
# Raise volume
super + a
  $HOME/bash-scripts/utils/raise-volume.sh 3

super + shift + a
  $HOME/bash-scripts/utils/raise-volume.sh 7

super + ctrl + shift + a
  $HOME/bash-scripts/utils/raise-volume.sh 500

# Lower volume
super + semicolon
  $HOME/bash-scripts/utils/lower-volume.sh 3

super + shift + semicolon
  $HOME/bash-scripts/utils/lower-volume.sh 7

super + ctrl + shift + semicolon
  $HOME/bash-scripts/utils/lower-volume.sh 500

# Increase brightness
super + o
  xbacklight -inc 2

super + shift + o
  xbacklight -inc 10

super + ctrl + shift + o
  xbacklight -set 100

# Decrease brightness
super + q
  xbacklight -dec 2

super + shift + q
  xbacklight -dec 10

super + ctrl + shift + q
  xbacklight -set 1

