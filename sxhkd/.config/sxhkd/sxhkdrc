#####################
### BSPWM HOTKEYS ###
#####################

# quit/restart bspwm
alt + ctrl + {q,r}
	bspc {quit,wm -r}

# close/kill node
alt + {_,shift + }q
	bspc node -{c,k}

# alternate tiled/monocle layout
alt + m
	bspc desktop -l next

### STATE/FLAGS ###

# set node state
alt + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

### FOCUS/SWAP ###

# focus/move node in specific direction
alt + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

#??
# focus node for specific path jump
#??
# alt + {p,b,comma,period}
	# bspc node -f @{parent,brother,first,second}

# switch to/send to specific desktop
alt + {_,shift + }{1,2,3,8,9,0,minus,equal}
	bspc {desktop -f,node -d} '^{1,2,3,4,5,6,7,8}'; bspc node -f 'any.!sticky.leaf.local'

### PRESELECT ###

# preselect direction
alt + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# cancel preselection
alt + ctrl + BackSpace
	bspc node -p cancel

### MOVE/RESIZE ###

# expand window from each side outwards
# alt + ctrl + shift + {h,j,k,l}
#   bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract window from each side inwards
# alt + shift + {h,j,k,l}
#   bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
alt + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

shift + alt + {Left,Down,Up,Right}
	bspc node -v {-80 0,0 80,0 -80,80 0}

#############
### UTILS ###
#############

# make sxhkd reload its configuration files:
alt + ctrl + Escape
  pkill -USR1 -x sxhkd

# program launcher
alt + Return
	rofi -modi run,drun,window -show drun -show-icons -sidebar-mode

# terminal emulator
alt + space
  alacritty

# terminal emulator
alt + p
  rofi-pass

###################
### APP ACTIONS ###
###################

# Screenshot
Print
  gnome-screenshot

# Raise volume
super + a
  $HOME/bash-scripts/utils/raise-volume.sh 3

super + shift + a
  $HOME/bash-scripts/utils/raise-volume.sh 7

super + ctrl + shift + a
  $HOME/bash-scripts/utils/raise-volume.sh 500

# Lower volume
super + z
  $HOME/bash-scripts/utils/lower-volume.sh 3

super + shift + z
  $HOME/bash-scripts/utils/lower-volume.sh 7

super + ctrl + shift + z
  $HOME/bash-scripts/utils/lower-volume.sh 500

# Increase brightness
super + d
  xbacklight -inc 2

super + shift + d
  xbacklight -inc 10

super + ctrl + shift + d
  xbacklight -set 100

# Decrease brightness
super + c
  xbacklight -dec 2

super + shift + c
  xbacklight -dec 10

super + ctrl + shift + c
  xbacklight -set 1

# Increase screen temperature 
super + s
  $HOME/bash-scripts/utils/increase-screen-temperature.sh 50

# Decrease screen temperature
super + x
  $HOME/bash-scripts/utils/decrease-screen-temperature.sh 50

#####################
### APP SHORTCUTS ###
#####################

# LibreWolf (personal)
super + r
  $HOME/bash-scripts/utils/librewolf-with-custom-class.sh personal 2

# LibreWolf (dev)
super + t
  $HOME/bash-scripts/utils/librewolf-with-custom-class.sh dev 3

# pavucontrol
super + m
  pavucontrol

# st terminal (backup)
super + apostrophe
  st

# Qalc
super + q
  alacritty --class qalc -e qalc

# Miku
super + u
  $HOME/bash-scripts/utils/terminal-play-video.sh miku-himitsu-keisatsu

# Random video in terminal
super + bracketright
  $HOME/bash-scripts/utils/terminal-random-video.sh

# Nitrogen
super + n
  nitrogen

# File manager
super + f
  thunar

# DeadBeef
super + b
  deadbeef
